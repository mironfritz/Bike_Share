<% content_for :navbar do %>
   <div class="empty"></div>
<% end %>
  <div class="container-banner">
    <div class="banner">
      <div class="header-background">
        <div class="logo">
          <h2><i class="fas fa-biking" style="font-size: 26px;"></i>  BikeShare</h2>
        </div>
        <h1 class = "header">Rent your dream bike</h1>
      </div>
      <div style="margin: 50px 20px; padding-left: 130px">
        <%= link_to "Rent out a bike", new_bike_path, class: "secondary-button", id: "landing-page-button" %>
        <%= link_to "Find a bike", bikes_path, class: "primary-button" %>
      </div>
  </div>
</div>

<div class="container-card">
  <div class="card-deck">
    <div class="card">
      <img class="card-img-top" src=<%= image_path("bike_black.jpg") %> alt="Card image bike 1" width=170>
      <div class="card-body">
        <h5 class="card-title">Earn extra money with your bikes</h5>
        <p class="card-text">As a simple add on you will make the world a bit greener by renting out your own bikes!</p>
      </div>
    </div>
    <div class="card">
      <img class="card-img-top" src=<%= image_path("bike_picture_three.jpg") %> alt="Card image bike 2" width=170 >
      <div class="card-body">
        <p class="card-text">Different bikes for different needs!</p>
      </div>
    </div>
    <div class="card">
      <img class="card-img-top" src=<%= image_path("bike_black_two.jpg") %> alt="Card image bike 3" width=170>
      <div class="card-body">
        <h5 class="card-title">Try out the biggest bike renting platform</h5>
        <p class="card-text">Easily choose and return your favorite bike near to your location!</p>
      </div>
    </div>
  </div>
