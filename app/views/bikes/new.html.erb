<h1>New bike</h1>

<%= simple_form_for @bike do |f| %>
  <%= f.input :title %>
  <%= f.input :bike_type %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", bikes_path, class: "btn btn-secondary" %>
