<% if policy(Bike).create? %>
  <%= link_to "âž• Add bike", new_bike_path, class: "btn btn-outline-info"%>
<% end %>


<div class="flex-container">
    <% @bikes.each do |bike| %>
    <%= link_to bike, class: "card bike d-flex flex-column btn" do %>
         <% if bike.photo.attached? %>
          <%= cl_image_tag bike.photo.key, height: 300, width: 300, crop: :fill  %>
          <% end %>
          <div class="title" mt-3>
            <h2><%= bike.title%></h2>
          </div>
          <div class="description">
          <p><%= bike.description %></p>
          </div>
          <div class="price">
            <p><%= bike.price_per_day %> SEK</p>
          </div>
        <% end %>
    <% end %>
</div>


