<% if policy(Bike).create? %>
  <%= link_to "âž• Add bike", new_bike_path, class: "btn btn-outline-info"%>
<% end %>


<div class="flex-container">
    <% @bikes.each do |bike| %>
     <div class="card">
       <% if bike.photo.attached? %>
        <%= cl_image_tag bike.photo.key, height: 300, width: 400, crop: :fill  %>
        <% end %>
        <div class="title">
          <h2><%= bike.title%></h2>
        </div>
        <div class="description">
        <p><bold><%= bike.description %></bold></p>
        </div>
        <%= link_to "Show bike", bike, class: "btn btn-outline-info"%>
      </div>
    <% end %>
</div>


