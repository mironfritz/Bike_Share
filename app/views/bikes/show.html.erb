<div class="background">

  <div class="uploaded-image">
    <% if @bike.photo.attached? %>
      <%= cl_image_tag @bike.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <div class="container show-card-container">
    <div class="card">
      <h1 style="color:#72BEC4";><bold><%= @bike.title %></bold></h1>
      <h2><%= @bike.bike_type %></h2>
        <%= @bike.description %>

      <h2>Price / Day : <%= @bike.price_per_day %> SEK</h2>

      <% if policy(@bike).edit? %>
        <%= link_to "Update", edit_bike_path(@bike), class: "card-title btn btn-outline-dark" %>
      <% end %>

      <% if policy(@bike).destroy? %>
        <%= link_to "Delete", bike_path, method: :delete, class: "card-title btn btn-outline-dark"%>
      <% end %>

      <% if policy(Booking).create? %>
        <%= link_to "Book this bike", new_bike_booking_path(@bike), class: "card-title btn btn-outline-warning"%>
      <% end %>

      <h3>Bookings:</h3>
      <ul>
        <% @bookings.each do |booking| %>
          <li><%= "Booked from #{booking.start_date} to #{booking.end_date} | booking status: #{booking.status}" %></li>
        <% end %>
      </ul>

      <%= link_to "Back", bikes_path, class: "card-title btn btn-outline-dark"%>
    </div>
  </div>
</div>


