
<div class="form-container">
  <div class="title"><h1><%= @bike.title %></h1></div>
  <div class="form">
    <%= simple_form_for @bike do |f| %>
      <%= f.input :title %>
      <%= f.input :bike_type %>
      <%= f.input :description %>
      <%= f.input :price_per_day %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Update", class: "primary-button" %>
    <% end %>
  </div>
</div>

<%= link_to "Back", bikes_path, class: "secondary-button" %>

