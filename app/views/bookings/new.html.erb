<div class="form-container">
  <div class="title"><h1>Book <%= @bike.title %></h1></div>
  <div class="form">
    <%= simple_form_for [@bike, @booking] do |f|%>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit "Request booking", class: "primary-button" %>
    <% end %>
  </div>
</div>



